<h1>Admin dashboard</h1>

<a href="/admin/reset/all" class="btn btn-primary btn-sm"> reset</a>
<a href="/auth/logout" class="btn btn-outline-secondary btn-sm"> logout</a>

<br />

<div class="container">

    <div class="row">

        <div class="days-wrapper">

            {{#each all_days}}

                <div id="1" data-value="{{this.weekday}}" class=" {{this.status}} days">
                    <br />
                    {{this.weekday}}
                    <br />
                    <p>{{this.counter}}</p>

                </div>

                <div id="details" style="background-color: rgb(187, 203, 255);display:none;position:absolute;height:300px;width:300px;bottom:40;border-radius:15px">
                        <br>
                    {{#each this.users}}
                        <p style="font-size: 1.1rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                            </svg>
                            {{this.username}}
                        </p>
                    {{/each}}
                        <br>
                    <p> <span style="font-size: 1.5rem;font-weight:600" > {{this.counter}} </span>  have booked </p>
                </div>

            {{/each}}

        </div>

    </div>

    <br />
    <br />
    <br />

    <div class="row">
        <div class="col-6">
            <div style="padding: 1rem 4rem;">
                <h3>Add Waiters</h3>
                <form action="/auth/register" method="post">
                    <input style="margin-bottom: 0.8rem;" class="form-control" type="text" name="username" placeholder="Username" required />
                    <input style="margin-bottom: 0.8rem;" class="form-control" type="password" name="password" placeholder="Password" required />
                    <button class="btn btn-success" type="submit">Register</button>
                </form>

            </div>

        </div>

        <div class="col-6">
            <h3> Waiters </h3>

            <ul class="waiter" style="padding:1rem;">
                {{#each waiters}}
                    <li>

                        <div class="row item">
                            <div class="col-8">
                                <p style="font-size:1rem">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                    </svg>
                                    {{this.username}}
                                </p>
                            </div>
                            <div class="col-2">
                                <a class="btn btn-secondary btn-sm" href="#">View</a>
                            </div>
                            <div class="col-2">
                                <a class="btn btn-outline-danger btn-sm" href="/admin/remove/{{this.id}}">Delete</a>
                            </div>
                        </div>
                    </li>

                {{/each}}
            </ul>

        </div>

    </div>
</div>