<h1>Waiters Dashboard</h1>
<span>
<a href="/auth/logout" class="btn btn-outline-secondary btn-sm"> logout</a>
</span>

<br />
<span id="username" data-value="{{authenticatedUser}}"></span>
<div class="container">

    <div class="justify-content-center d-flex">

        <div class="days-wrapper">

            {{#each all_days}}
                <div class="days {{this.status}}" id="1" data-value="{{this.weekday}}">
                    <br />
                    {{this.weekday}}
                    <br />
                    <p>{{this.counter}}</p>
                </div>
            {{/each}}

        </div>

    </div>

    <br />
    <br />
    <center>
        <button class="btn btn-primary" id="submit">Schedule</button>
    </center>

    <hr />
    <h3>Scheduled Days</h3>
    <br />

    <div class="d-flex">
        {{#each days}}
            <div style="margin:0.8rem;background-color:rgb(194, 194, 194)" class="card card-body col-1">
                <center>

                <span>{{this.weekday}}
                    <span>
                        <a style="text-decoration: none;color:rgb(255, 91, 91)" href="/waiters/remove/{{this.id}}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                            </svg>

                        </a>
                    </span>
                </span>
                </center>
            </div>
        {{/each}}
    </div>
</div>